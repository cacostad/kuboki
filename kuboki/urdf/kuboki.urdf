<?xml version="1.0"?>
<robot name="kuboki_robot">

    <!-- marco de referencia -->
    <link name="base_footprint"/>
   <!-- Cuerpo del robot -->
    <link name="base_link">
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>

        <visual name="">
            <origin xyz="0.0 0.0 0.0265" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.177" length="0.089"/> 
            </geometry>
            <material name="Black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.177" length="0.089"/> 
            </geometry>
        </collision>

    </link>
    <!-- union entre el cuerpo y la base -->
    <joint name="joint_name" type="fixed">
        <origin xyz="0.0 0.0 0.035" rpy="0.0 0.0 0.0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>

    <joint name="cylinder_joint_1" type="continuous">
        <origin xyz="0.0 0.115 0.0" rpy="$(eval -pi/2) 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_1_motor"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit effort="10" velocity="6.0"/>
    </joint>
<!-- rueda motorizada 1 -->
    <link name="wheel_1_motor">

        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>

        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder length="0.0206" radius="0.035"/>
            </geometry>
            <material name="Red">
                <color rgba="1.0 0.0 0.0 1.0"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder length="0.0206" radius="0.035"/>
            </geometry>
        </collision>

    </link>

    <joint name="cylinder_joint_2" type="continuous">
        <origin xyz="0.0 -0.115 0.0" rpy="$(eval -pi/2) 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_2_motor"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit effort="10" velocity="6.0"/>
    </joint>

    <transmission name="trans_cylinder_1">
        <type>transmission_interface/SimpleTransmission</type>

        <joint name="cylinder_joint_1">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>

        <actuator name="motor1">
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>

    </transmission>


<!-- rueda motorizada 2 -->
    <link name="wheel_2_motor">

        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>

        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder length="0.0206" radius="0.035"/>
            </geometry>
            <material name="Red">
                <color rgba="1.0 0.0 0.0 1.0"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder length="0.0206" radius="0.035"/>
            </geometry>
        </collision>

    </link>

    <transmission name="trans_cylinder_2">
        <type>transmission_interface/SimpleTransmission</type>
        
        <joint name="cylinder_joint_2">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>

        <actuator name="motor2">
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>

    </transmission>
<!-- rueda fija 1 -->
    <joint name="sphere_joint_1" type="fixed">
        <origin xyz="0.135 0.0 -0.018" rpy="$(eval -pi/2) 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_1_fixed"/>
    </joint>

    <link name="wheel_1_fixed">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.017"/>
            </geometry>
            <material name="Blue">
                <color rgba="0.0 0.0 1.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.017"/>
            </geometry>
        </collision>
    </link>
<!-- rueda fija 2 -->
    <joint name="sphere_joint_2" type="fixed">
        <origin xyz="-0.135 0.0 -0.018" rpy="$(eval -pi/2) 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_2_fixed"/>
    </joint>

    <link name="wheel_2_fixed">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>

                <sphere radius="0.017"/>>

            </geometry>
            <material name="Blue">
                <color rgba="0.0 0.0 1.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.017"/>
            </geometry>
        </collision>
    </link>
    
    <!-- Gazebo ROS Plugin-->
    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <robotNamespace>/</robotNamespace>
        </plugin>
    </gazebo>

</robot>